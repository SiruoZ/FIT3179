{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 400,
  "title": {"text": "Global GDP by year", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/SiruoZ/FIT3179/main/data/GLOBALGDP.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "stack",
          "groupby": ["Year"],
          "field": "Global GDP",
          "sort": {"field": ["Global GDP"], "order": ["descending"]},
          "as": ["Global GDP_start", "Global GDP_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Global GDP\"]) && isFinite(+datum[\"Global GDP\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Global GDP"},
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Year: \" + (isValid(datum[\"Year\"]) ? datum[\"Year\"] : \"\"+datum[\"Year\"]) + \"; Global GDP: \" + (format(datum[\"Global GDP\"], \"\"))"
          },
          "x": {"scale": "x", "field": "Year"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "Global GDP_end"},
          "y2": {"scale": "y", "field": "Global GDP_start"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {"data": "source_0", "field": "Year", "sort": true},
      "range": [0, {"signal": "width"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["Global GDP_start", "Global GDP_end"]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [
        1000000000000,
        5000000000000,
        10000000000000,
        50000000000000,
        100000000000000,
        500000000000000
      ],
      "range": [
        "#ffffcc",
        "#d9f0a3",
        "#addd8e",
        "#78c679",
        "#41ab5d",
        "#238443",
        "#005a32"
      ],
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Global GDP",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "orient": "right",
      "title": "Global GDP",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"}
    }
  ],
  "config": {}
}