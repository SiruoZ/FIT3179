  ],
  "scales": [
    {
      "name": "color",
      "type": "threshold",
      "domain": [
        100000000,
        1000000000,
        10000000000,
        100000000000,
        1000000000000,
        10000000000000
      ],
      "range": [
        "#ffffcc",
        "#d9f0a3",
        "#addd8e",
        "#78c679",
        "#41ab5d",
        "#238443",
        "#005a32"
      ],
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "format": "$.2s",
      "title": "GDP $USD(1960 to 2019)",
      "fill": "color",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "encode": {"symbols": {"update": {"stroke": {"value": "#252525"}}}}
    }
  ],
  "config": {}
