          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"2000 Debt to GDP%\": format(datum[\"2000\"], \".2f\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
