    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "threshold",
      "domain": [0, 20, 40, 60, 80, 100, 120],
      "range": [
        "#ffffcc",
        "#fed976",
        "#feb24c",
        "#fd8d3c",
        "#fc4e2a",
        "#e31a1c",
        "#b10026"
      ],
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "format": "",
      "title": "Debt to GDP %(1990 to 2018)",
      "fill": "color",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "encode": {"symbols": {"update": {"stroke": {"value": "#252525"}}}}
    }
  ],
  "config": {}
}