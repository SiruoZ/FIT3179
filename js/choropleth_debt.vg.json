          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"2010 Debt to GDP%\": format(datum[\"2010\"], \".2f\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
