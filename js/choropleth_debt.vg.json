          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_4_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "data_3"},
      "encode": {
        "update": {
          "stroke": {"value": "#252525"},
